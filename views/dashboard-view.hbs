{{> menu active="dashboard"}}

<section class="section">
  <h2 class="title is-2 has-text-centered">Station Dashboard</h2>

  <!-- Add new station -->
  <form action="/dashboard/addstation" method="POST">
    <div class="field has-addons">
      <div class="control is-expanded">
        <input class="input" type="text" name="title" placeholder="Station Name" required>
      </div>
      <div class="control">
        <button class="button is-primary">Add Station</button>
      </div>
    </div>
  </form>

  <!-- List stations -->
  {{#each stations}}
  <div class="box">
    <div class="level">
      <div class="level-left">
        <h3 class="title is-4">{{title}}</h3>
      </div>
      <div class="level-right">
        <a href="/dashboard/deletestation/{{_id}}" class="button is-danger is-small">Delete Station</a>
      </div>
    </div>

    <!-- Go to station reports -->
    <a href="/station/{{_id}}" class="button is-link is-small mt-2">View Reports</a>
  </div>
  {{/each}}
</section>



